    div.app
      div.app__content
        include ../includes/_header.jade
        include ../includes/_nav.jade
        
        div.shop
          h2.sr-only Negozi

          div.shop__items
          
            mixin shopItem(sub,link,address, p1, tel1, tel2)
              div.shop__item
                if sub
                  p.sub #{sub}
                if address
                  h3
                    if link
                      a(href="#{link}" target="_blank") #{address}
                    else
                      | #{address}
                if p1
                  p #{p1}
                if tel1
                  p
                    | Tel. 
                    a(href="tel:#{tel1}") #{tel2}

